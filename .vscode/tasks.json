{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "yarn",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"]
        },
        {
            "taskName": "test",
            "args": ["run", "test"]
        },
        {
            "taskName": "lint",
            "args": ["run", "lint"]
        },
        {
            "taskName": "lintfix",
            "args": ["run", "lintfix"]
        },
        {
            "taskName": "start",
            "args": ["run", "start"]
        },
        {
            "taskName": "build",
            "args": ["run", "build"]
        }
    ]
}
